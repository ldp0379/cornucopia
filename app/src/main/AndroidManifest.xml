<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cornucopia.ldp.cornucopia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cornucopia"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.EdgeBumpActivity"
            android:label="@string/edge_bump"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.StickyHeaderRecycleViewActivity"
            android:label="@string/sticky_header_view"
            android:screenOrientation="portrait" />
    </application>

</manifest>